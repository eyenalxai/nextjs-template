{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"tsc": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "oxlint --type-aware --fix",
		"check": "biome check --write .",
		"verify": "pnpm run format && pnpm run check && pnpm run lint && pnpm run tsc",
		"auth:generate": "dotenvx run -f .env.local -- cli generate --config src/lib/auth/auth.ts --output src/server/database/auth-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate-local": "dotenvx run -f .env.local -- drizzle-kit migrate"
	},
	"dependencies": {
		"@base-ui-components/react": "1.0.0-beta.4",
		"@hookform/resolvers": "^5.2.2",
		"@t3-oss/env-nextjs": "^0.13.8",
		"@tanstack/react-query": "^5.90.7",
		"@trpc/client": "^11.7.1",
		"@trpc/next": "^11.7.1",
		"@trpc/react-query": "^11.7.1",
		"@trpc/server": "^11.7.1",
		"better-auth": "^1.3.34",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.6",
		"geist": "^1.5.1",
		"lucide-react": "^0.553.0",
		"neverthrow": "^8.2.0",
		"next": "^16.0.1",
		"next-themes": "^0.4.6",
		"pg": "^8.16.3",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-hook-form": "^7.66.0",
		"superjson": "^2.2.5",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.34",
		"@biomejs/biome": "2.3.4",
		"@dotenvx/dotenvx": "^1.51.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "24.10.0",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"drizzle-kit": "^0.31.6",
		"oxlint": "^1.26.0",
		"oxlint-tsgolint": "^0.5.1",
		"postcss": "^8.5.6",
		"shadcn": "3.5.0",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.9.3"
	}
}
