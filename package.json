{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"tsc": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "oxlint --type-aware --fix",
		"check": "biome check --write .",
		"auth:generate": "dotenvx run -f .env.local -- cli generate --config src/lib/auth/auth.ts --output src/server/database/auth-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate-local": "dotenvx run -f .env.local -- drizzle-kit migrate"
	},
	"dependencies": {
		"@t3-oss/env-nextjs": "^0.13.8",
		"@tanstack/react-query": "^5.90.2",
		"@trpc/client": "^11.6.0",
		"@trpc/next": "^11.6.0",
		"@trpc/react-query": "^11.6.0",
		"@trpc/server": "^11.6.0",
		"better-auth": "^1.3.27",
		"drizzle-orm": "^0.44.6",
		"geist": "^1.5.1",
		"neverthrow": "^8.2.0",
		"next": "^16.0.0",
		"next-themes": "^0.4.6",
		"pg": "^8.16.3",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"superjson": "^2.2.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.27",
		"@biomejs/biome": "2.3.0",
		"@dotenvx/dotenvx": "^1.51.0",
		"@types/node": "24.9.1",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"drizzle-kit": "^0.31.5",
		"oxlint": "^1.24.0",
		"oxlint-tsgolint": "^0.3.0",
		"shadcn": "3.5.0",
		"tsx": "^4.20.6",
		"typescript": "5.9.3"
	}
}
